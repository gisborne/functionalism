<form action="/{model}" method="put" role="form">
    <input type="hidden" name="id" id="id" value="{id}">
    <input type="hidden" name="_method" value="put">
    {#fields}
        <div class="form-group">
        <label for="{.name}">{.name}</label><input name="{.name}" class="form-control" type="{.type}" value="{.value}" placeholder="Enter {.type}"><br>
        </div>
    {/fields}
    <input type="submit">
</form>